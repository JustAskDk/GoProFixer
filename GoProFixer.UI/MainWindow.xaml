<Window x:Class="GoProFixer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoProFixer.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Select path" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Click="Button_Click"/>
            <Label Name="textHolder" Content="" Margin="10" VerticalAlignment="Center" Width="220"/>
            <CheckBox Name="CheckboxRecursive" Content="Recursive" VerticalAlignment="Center" />
        </StackPanel>
        <ScrollViewer Margin="10" Height="110">        
            <TextBox Name="boxy" HorizontalAlignment="Left" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" />
        </ScrollViewer>

    </StackPanel>
</Window>
